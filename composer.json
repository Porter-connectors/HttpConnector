{
  "name": "connectors/http",
  "description": "Provides an HTTP connector for Porter.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "license": "LGPL-3.0",
  "minimum-stability": "beta",
  "require": {
    "php": "^8.1",
    "amphp/http-client": "^5.0.0-beta.4",
    "amphp/http-client-cookies": "^2.0.0-beta.1",
    "connectors/ssl": "^2",
    "phptype/string": "^1",
    "scriptfusion/porter": "^6"
  },
  "require-dev": {
    "amphp/http": "^1.6@stable",
    "mockery/mockery": "^1.3.3",
    "phpunit/phpunit": "^9.5",
    "symfony/process": "^6.1"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Porter\\Net\\Http\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ScriptFUSIONTest\\": "test"
    }
  },
  "scripts": {
    "test": "phpunit -c test"
  },
  "config": {
    "sort-packages": true
  }
}
