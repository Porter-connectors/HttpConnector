{
  "name": "connectors/http",
  "description": "Provides an HTTP connector for Porter.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "license": "LGPL-3.0",
  "require": {
    "php": "^8.1",
    "amphp/http-client": "^5.1",
    "amphp/http-client-cookies": "^2",
    "scriptfusion/porter": "^7"
  },
  "require-dev": {
    "mockery/mockery": "^1.3.3",
    "phpunit/phpunit": "^9.5.23",
    "symfony/process": "^6.1"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Porter\\Net\\Http\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ScriptFUSIONTest\\": "test"
    }
  },
  "scripts": {
    "test": "phpunit -c test"
  },
  "config": {
    "sort-packages": true
  }
}
